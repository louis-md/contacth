<div class="big-container manage-products-wrapper">

  <h3 class="manage-products-title">Manage your contacts</h3>
  
  <table class="product-manage-table">
    <thead>
      <tr class="table-row">
        <th class="table-head">Contact's avatar</th>
        <th class="table-head">Contact's Name</th>
        <th class="table-head">Contact's Phone</th>
        <th class="table-head">Edit</th>
        <th class="table-head">Delete</th>
      </tr>
    </thead>

    <tbody>
      {{#each contacts}}
      <tr class="table-row">
        {{> contact_row}}
      </tr>
      {{/each}}

      {{#unless contacts}}
      <tr>
        <td colspan="6">sorry no contacts yet</td>
      </tr>
      {{/unless}}
      
    </tbody>
  </table>
  
</div>