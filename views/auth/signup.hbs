    {{!-- Logo/Nom --}}
    <a class="navbar-brand font-weight-bold" href="/">
      <img rel="img-fluid" src="/images/logo.png" width="35px" alt="logo">
    </a>
    <a class="navbar-brand font-weight-bold" href="/">Contacth</a>
</nav>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header p-4">
      <h5 class="modal-title text-primary font-weight-bold">Signup</h5>
    </div>
    <form action="/auth/signup" method="POST" id="form-container">
      <div class="modal-body">
        <div class="form-group">
          <label for="firstName">First name*</label>
          <input id="firstName" class="form-control" type="text" name="firstName" placeholder="Steve" required>
        </div>
        <div class="form-group">
          <label for="lastName">Last name</label>
          <input id="lastName" class="form-control" type="text" name="lastName" placeholder="Jobs">
        </div>  
        <div class="form-group">
          <label for="email">Email*</label>
          <input id="email" class="form-control" type="text" name="email" placeholder="steve.jobs@apple.com" required>
        </div>
        <div class="form-group">
          <label for="password">Password*</label>
          <input id="password" class="form-control" type="password" name="password" placeholder="************" required>
        </div>
          <small>
            <a class="text-primary" href="/auth/login">Do you already have an account? Login</a>
        </small>
      </div>
        <div class="modal-footer">
        {{#if message }}
          <div class="error-message">{{ message }}</div>
        {{/if}}
        <div class="g-recaptcha" data-sitekey="6Lf25NcUAAAAAMTgn3gvkYknMnUGBfMmzGrY9cXy"></div>
        <button class="btn btn-primary">Create account</button>
      </div>
    </form>
  </div>
</div>
